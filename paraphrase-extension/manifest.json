{
  "manifest_version": 3,
  "name": "Parafraseador de Texto",
  "version": "1.0.0",
  "description": "Parafraseie qualquer texto selecionado com diferentes estilos - formal, informal, conciso, criativo e mais!",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Parafraseador de Texto"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content-styles.css"]
    }
  ]
}
